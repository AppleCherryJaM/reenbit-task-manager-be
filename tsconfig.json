{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@controllers/*": ["./controllers/*"],
			"@models/*": ["./models/*"],
			"@services/*": ["./services/*"],
			"@utils/*": ["./utils/*"],
			"@lib/*": ["./lib/*"],
			"@validators/*": ["./validators/*"],
			"@validation/*": ["./models/validation/*"]
		},
		"ignoreDeprecations": "6.0"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build"]
}
