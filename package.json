{
	"name": "reenbit-task-manager-be",
	"version": "1.0.0",
	"description": "Backend for task manager app",
	"main": "app.ts",
	"scripts": {
		"dev": "nodemon src/app.ts",
		"build": "tsc",
		"start": "node build/app.js",
		"generate": "npx prisma generate",
		"lint": "biome lint .",
		"lint:fix": "biome lint --apply .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --apply ."
	},
	"_moduleAliases": {
		"@": "build",
		"@controllers": "build/controllers",
		"@models": "build/models",
		"@services": "build/services",
		"@utils": "build/utils",
		"@lib": "build/lib",
		"@validators": "build/validators",
		"@validation": "build/models/validation"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AppleCherryJaM/reenbit-task-manager-be.git"
	},
	"author": "Maksym Bolsunovskyi",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/AppleCherryJaM/reenbit-task-manager-be/issues"
	},
	"homepage": "https://github.com/AppleCherryJaM/reenbit-task-manager-be#readme",
	"dependencies": {
		"@prisma/adapter-pg": "^7.0.0",
		"@prisma/client": "^7.0.1",
		"bcryptjs": "^3.0.3",
		"body-parser": "^2.2.0",
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0",
		"express-validator": "^7.3.1",
		"jsonwebtoken": "^9.0.2",
		"module-alias": "^2.2.3",
		"pg": "^8.16.3",
		"prisma": "^7.0.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.5",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/module-alias": "^2.0.4",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.15.6",
		"nodemon": "^3.1.11",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3"
	}
}
